{
  "name": "satori",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:desktop": "pnpm -C apps/desktop dev",
    "dev:server": "pnpm -C apps/server dev",
    "build": "turbo run build",
    "build:unpack": "pnpm -C apps/desktop build:unpack",
    "build:win": "pnpm -C apps/desktop build:win",
    "build:mac": "pnpm -C apps/desktop build:mac",
    "build:linux": "pnpm -C apps/desktop build:linux",
    "typecheck": "turbo run typecheck",
    "server:start": "pnpm -C apps/server start",
    "server:migrate": "pnpm -C apps/server migrate",
    "server:create-user": "pnpm -C apps/server create-user --",
    "rebuild:native": "pnpm -C apps/desktop rebuild:native",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "prettier": "^3.7.4",
    "turbo": "^2.5.6"
  }
}
